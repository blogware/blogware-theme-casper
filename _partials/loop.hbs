<div class="extra-pagination inner">
  {{> pagination}}
</div>

{{#range @posts @paginator.begin @paginator.end}}
  <article class="post">
    <header class="post-header">
      <h2 class="post-title"><a href="{{fullpath path}}">{{title}}</a></h2>
    </header>
    <section class="post-excerpt">
      <p>{{excerpt content words="26" append=""}} <a class="read-more" href="{{fullpath path}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
      {{#if author}}
        {{#if author.image}}
          <img class="author-thumb" src="{{author.image}}" alt="{{author.title}}" nopin="nopin" />
        {{/if}}
        <a href="{{fullpath author.path}}">{{author.title}}</a>
      {{/if}}
      {{#if tags}}on
        {{#each tags}}
          {{#unless @first}},{{/unless}} <a href="{{fullpath path}}">{{title}}</a>
        {{/each}}
      {{/if}}
      <time class="post-date" datetime="{{datetime date 'YYYY-MM-DD'}}">{{datetime date 'DD MMMM YYYY'}}</time>
    </footer>
  </article>
{{/range}}

{{> pagination}}
