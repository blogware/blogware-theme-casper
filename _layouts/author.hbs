---
layout: default
perpage: 5
---

<header class="main-header author-head{{#if @author.cover}}" style="background-image: url({{@author.cover}}){{else}} no-cover{{/if}}">
  <nav class="main-nav overlay clearfix">
    {{#if @site.logo}}<a class="blog-logo" href="{{fullpath '/'}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>{{/if}}
    {{#if @site.navigation}}
      <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
    {{/if}}
  </nav>

  <section class="author-profile inner">
    {{#if @author.image}}
      <figure class="author-image">
        <div class="img" style="background-image: url({{@author.image}})"><span class="hidden">{{@author.title}}'s Picture</span></div>
      </figure>
    {{/if}}
    <h1 class="author-title">{{@author.title}}</h1>
    {{#if @author.bio}}
      <h2 class="author-bio">{{@author.bio}}</h2h2>
    {{/if}}
    <div class="author-meta">
      {{#if @author.location}}<span class="author-location icon-location">{{@author.location}}</span>{{/if}}
      {{#if @author.website}}<span class="author-link icon-link"><a href="{{@author.website}}">{{@author.website}}</a></span>{{/if}}
      <span class="author-stats"><i class="icon-stats"></i> {{@paginator.total}} posts</span>
    </div>
  </section>
</header>

<main class="content" role="main">

  {{> loop}}

</main>
