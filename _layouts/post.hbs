---
layout: default
---

{{#extend "body_class"}}post-template{{/extend}}

<header class="main-header post-head {{#if @current.image}}" style="background-image: url({{@current.image}}){{else}}no-cover{{/if}}">
  <nav class="main-nav {{#if @current.image}}overlay{{/if}} clearfix">
    {{#if @site.logo}}<a class="blog-logo" href="{{fullpath '/'}}"><img src="{{fullpath @site.logo}}" alt="{{@site.title}}" /></a>{{/if}}
    {{#if @site.navigation}}
      <a class="menu-button icon-menu" href="#"><span clas="word">Menu</span></a>
    {{/if}}
  </nav>
</header>

<main class="content" role="main">
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{{@current.title}}</h1>
      <section class="post-meta">
        <time class="post-date" datetime="{{datetime @current.date 'YYYY-MM-DD'}}">{{datetime @current.date 'DD MMMM YYYY'}}</time>
      </section>
    </header>

    <section class="post-content">
      {{content}}
    </section>

    <footer class="post-footer">

      {{#with @current.author}}

        {{#if image}}
          <figure class="author-image">
            <a class="img" href="{{fullpath path}}" style="background-image: url({{image}})"><span class="hidden">{{title}}'s Picture'</span></a>
          </figure>
        {{/if}}

        <section class="author">
          <h4><a href="{{fullpath path}}">{{title}}</a></h4>

          {{#if bio}}
            <p>{{bio}}</p>
          {{else}}
            <p>Read <a href="{{fullpath path}}">more posts</a> by this author.</p>
          {{/if}}
          <div class="author-meta">
            {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
            {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
          </div>
        </section>

      {{/with}}

      <section class="share">
        <h4>Share this post</h4>
        <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{@current.title}}&amp;url={{permalink @current.path}}"
           onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <span class="hidden">Twitter</span>
        </a>
        <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{permalink @current.path}}"
           onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          <span class="hidden">Facebook</span>
        </a>
        <a class="icon-google-plus" href="https://plus.google.com/share?url={{permalink @current.path}}"
           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          <span class="hidden">Google+</span>
        </a>
      </section>

    </footer>

  </article>
</main>

<aside class="read-next">
  {{#with @next}}
    <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{fullpath path}}">
      <section class="post">
        <h2>{{title}}</h2>
        <p>{{excerpt content}}&hellip;</p>
      </section>
    </a>
  {{/with}}
  {{#with @prev}}
    <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{fullpath path}}">
      <section class="post">
        <h2>{{title}}</h2>
        <p>{{excerpt content}}&hellip;</p>
      </section>
    </a>
  {{/with}}
</aside>
