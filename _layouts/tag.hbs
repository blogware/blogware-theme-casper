---
layout: default
perpage: 5
---

<header class="main-header tag-head {{#if @tag.image}}" style="background-image: url({{@tag.image}}){{else}}{{#if @site.cover}}" style="background-image: url({{@site.cover}}){{else}}no-cover{{/if}}{{/if}}">

  <nav class="main-nav overlay clearfix">
    {{#if @site.logo}}<a class="blog-logo" href="{{fullpath '/'}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>{{/if}}
    {{#if @site.navigation}}
      <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
    {{/if}}
  </nav>
</header>

<main class="content" role="main">

  {{> loop}}

</main>
